  <div class="opener"></div>
  <div class="content">
    <h3>{param text "Caption title"}</h3>
    <p>
    {param textarea "Description"}
    </p>
  </div>
</div>
<script type="text/javascript">
var caption = {
  type: "frombottom",
  value: {param text "Height of the opened caption" "200" "Just a number in pixel."},

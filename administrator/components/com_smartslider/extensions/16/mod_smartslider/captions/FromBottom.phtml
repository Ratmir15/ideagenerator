  showEasing: "{param easing "Show animation easing"}",
  hideEasing: "{param easing "Hide animation easing"}",
  delay: {param text "Animation delay" "0" "in ms"},
  showcaption :{param list "Open caption"}0,No,1,Yes{/param}
